import React, { Component } from "react";
import { StyleSheet, TextInput, ActivityIndicator, Alert } from "react-native";
import {
  View,
  Text,
  Container,
  Left,
  Header,
  Body,
  Right,
  Icon,
  Title,
  Row,
  Label,
  Button,
} from "native-base";

import {
  forceUtil,
  mobilesync,
  oauth,
  net,
  smartstore,
} from "react-native-force";

import { RadioButton } from "react-native-paper";
import { ScrollView } from "react-native-gesture-handler";

import QuickEnquiryOnSearch from "../screens/QuickEnquiryOnSearch";
class QuickEnquiry extends Component {
  constructor(props) {
    super(props);
    this.state = {
      checked: "Personal",
      listOfRecentLead: [],
      nameOrMobilNumber: "",
      isLoading: false,
    };
  }

  SearchMobilePhoneOrName = () => {
    let namee = this.state.nameOrMobilNumber;
    if (namee) {
      this.setState({
        isLoading: true,
      });
      net.query(
        "SELECT ID, Phone, MobilePhone, ACE_Dealer__c, Email, Status, Segment__c, (SELECT ID, Product__c FROM Product_Interests__r) FROM Lead WHERE (Phone = '" +
          namee +
          "' OR MobilePhone = '" +
          namee +
          "' OR Name = '" +
          namee +
          "' OR FirstName = '" +
          namee +
          "' OR LastName = '" +
          namee +
          "')",
        (resp) => {
          this.setState({
            isLoading: false,
          });
          console.log("  response : " + JSON.stringify(resp));
          if (resp.totalSize == 0) {
            this.props.navigation.navigate(
              "QuickEnquiryOnSearch",
              <QuickEnquiryOnSearch segment={this.state.checked} />
            );
          }
        }
      );
    } else {
      /*this.props.navigation.navigate("Customer360", {
          enquiryId: undefined
        });*/
      Alert.alert("Search Error", "Please enter Name/Number to search.");
    }
  };

  componentDidMount() {
    // To getting data for Recent Lead / Recent Quick Enquiry
    net.query(
      "Select Id, Name, MobilePhone, Email, Status from Lead order by createdDate desc limit 10",
      (data) => {
        this.setState({
          listOfRecentLead: data.records,
        });
      },
      (error) => {
        oauth.logout();
      }
    );
  }

  render() {
    const { checked, listOfRecentLead } = this.state;
    return (
      <Container>
        <Header
          style={{ backgroundColor: "#E31837" }}
          androidStatusBarColor="#A31837"
        >
          <Left>
            <Button
              transparent
              style={{ backgroundColor: "#E31837" }}
              onPress={() => this.props.navigation.goBack()}
            >
              <Icon name="md-arrow-back" style={{ color: "white" }} />
            </Button>
          </Left>
          <Body>
            <Title
              style={{
                color: "white",
                fontFamily: "barlow",
                fontWeight: "bold",
              }}
            >
              Quick Enquiry
            </Title>
          </Body>
          <Right />
        </Header>
        <View
          style={{
            borderWidth: 1,
            margin: "5%",
            borderColor: "#00000000",
            borderRadius: 10,
            elevation: 1,
            backgroundColor: "#E3DFCE",
          }}
        >
          <View style={{ marginHorizontal: "10%", paddingTop: "5%" }}>
            <Label>Segment : </Label>
          </View>
          <View style={{ border: 20, margin: 20, flexDirection: "row" }}>
            <Row style={{ alignItems: "center", flex: 1 }}>
              <RadioButton
                color="black"
                value="second"
                status={checked === "Personal" ? "checked" : "unchecked"}
                onPress={() => {
                  this.setState({ checked: "Personal" });
                }}
              />
              <Label>Personal</Label>

              <RadioButton
                color="black"
                value="second"
                status={checked === "Commercial" ? "checked" : "unchecked"}
                onPress={() => {
                  this.setState({ checked: "Commercial" });
                }}
              />
              <Label>Commercial</Label>
            </Row>
          </View>
        </View>

        <View style={{ flexDirection: "row", marginHorizontal: "5%" }}>
          <TextInput
            style={{
              borderColor: "grey",
              borderTopLeftRadius: 20,
              borderBottomLeftRadius: 20,
              height: 40,
              backgroundColor: "#E3DFCE",
              paddingLeft: 20,
              width: "85%",
              color: "black",
              borderWidth: 0,
            }}
            placeholder="Search Name / Number"
            placeholderTextColor="grey"
            onChangeText={(nameOrMobilNumber) => {
              this.setState({ nameOrMobilNumber });
            }}
          />

          <Button
            style={{
              backgroundColor: "#E3DFCE",
              borderTopRightRadius: 20,
              borderBottomRightRadius: 20,
              height: 40,
            }}
            onPress={this.SearchMobilePhoneOrName}
          >
            {this.state.isLoading == true ? (
              <ActivityIndicator
                style={{ margin: "3%" }}
                color="#E31837"
                size="small"
                animating
              />
            ) : (
              <Icon name="search" style={{ color: "black" }} />
            )}
          </Button>
        </View>

        <View
          style={{
            borderWidth: 1,
            margin: "5%",
            borderColor: "#00000000",
            borderRadius: 10,
            elevation: 1,
            backgroundColor: "#E3DFCE",
            paddingBottom : '10%'
          }}
        >

          <View style={{ marginHorizontal: "10%", paddingTop: "5%" }}>
            <Label>Recent Quick Enquiry : </Label>
            <View style={{ marginVertical: "10%" }}>
              <ScrollView showsVerticalScrollIndicator={false}>
                {listOfRecentLead.map((recentLead) => {
                  return (
                    <View style={{ marginTop: "5%" }}>
                      <Text style={{ fontWeight: "bold", fontSize: 15 }}>
                        {recentLead.Name}
                      </Text>
                      <Text>{recentLead.Email}</Text>
                      <Text>{recentLead.MobilePhone}</Text>
                      <View
                        style={{
                          borderColor: "lightgrey",
                          borderWidth: 0.5,
                        }}
                      />
                    </View>
                  );
                })}
              </ScrollView>
            </View>
          </View>
        </View>
      </Container>
    );
  }
}

const styles = StyleSheet.create({
  EnquiryOverallView: {
    flex: 1,
  },
  header: {
    backgroundColor: "#34495E",
  },
});
export default QuickEnquiry;
